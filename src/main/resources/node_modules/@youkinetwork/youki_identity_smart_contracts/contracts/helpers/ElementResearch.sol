pragma solidity >=0.8.0 <0.9.0;

contract  ElementResearch{

    function uintExists (uint _elt, uint256[] memory _eltArray)
    public 
    pure 
    returns(bool) {
        uint256 i = 0;
        bool exist = false;
        if (_eltArray.length == 0) {
            return false;
        }
        do {
            if (_eltArray[i] == _eltArray[_elt]) {
                exist = true;
            } else {
                i++;
            }
        } while (i < _eltArray.length && exist == false);
        return exist;
    }

}
